                    <Button VerticalAlignment="Stretch" Height="auto" Foreground="Linen" Name="btnVIP4" Content="VIP4" Background="Black" FontSize="20" FontFamily="Cooper Black" FontWeight="Heavy"    Click = "btnVIP4_Click"/>

                </DockPanel>
                    
                </Border>
                <Border Grid.Row="2" Grid.Column="4" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" BorderBrush="{StaticResource BackgroundColorPrimary}" BorderThickness="10" CornerRadius="15" Margin="2 0">
                <DockPanel >
                    <TextBox Text="سیستم وی آی پی5" Name="txtVIP5" FlowDirection="RightToLeft" DockPanel.Dock="Top" Foreground="Linen" Background="Black" FontSize="13" FontFamily="B Nazanin" FontWeight="Heavy"/>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                        <Label Name="lblStartVIP5" HorizontalAlignment="Left" Width="auto" Foreground="Linen"   Background ="Black"    FontSize="15" FontWeight="Bold" FontStretch="SemiCondensed"/>
