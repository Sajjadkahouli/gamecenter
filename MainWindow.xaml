            </DockPanel>
            </Grid>
            <Border  Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" BorderBrush="{StaticResource BackgroundColorPrimary}" BorderThickness="10" CornerRadius="15" Margin="2 0">
                
                <DockPanel >
                    <TextBox Text="بیلیارد" Name="txtbiliard" FlowDirection="RightToLeft" DockPanel.Dock="Top" Foreground="Linen" Background="Black" FontSize="13" FontFamily="B Nazanin" FontWeight="Heavy"/>
