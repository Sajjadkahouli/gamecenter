                <Border Grid.Row="0" Grid.Column="1" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" BorderBrush="{StaticResource BackgroundColorPrimary}" BorderThickness="5" CornerRadius="15" Margin="2 0">
                <DockPanel >
                    <TextBox Text="سیستم2" Name="txtps4N2" FlowDirection="RightToLeft" DockPanel.Dock="Top" Foreground="Linen" Background="Black" FontSize="13" FontFamily="B Nazanin" FontWeight="Heavy"/>
