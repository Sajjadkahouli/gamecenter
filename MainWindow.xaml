                    </StackPanel>
                    <Button VerticalAlignment="Stretch" Height="auto" Foreground="Linen" Name="btnps4N2" Content="Ps4N2" Background="Black" FontSize="20" FontFamily="Cooper Black" FontWeight="Heavy"    Click = "btnps4N2_Click"/>
                </DockPanel>
                    
                </Border>
                <Border Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" BorderBrush="{StaticResource BackgroundColorPrimary}" BorderThickness="5" CornerRadius="15" Margin="2 0">
                <DockPanel >
                    <TextBox Text="سیستم4" Name="txtps4N4" FlowDirection="RightToLeft" DockPanel.Dock="Top" Foreground="Linen" Background="Black" FontSize="13" FontFamily="B Nazanin" FontWeight="Heavy"/>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                        <Label Name="lblStartps4N4" HorizontalAlignment="Left" Width="auto" Foreground="Linen"   Background ="Black"    FontSize="15" FontWeight="Bold" FontStretch="SemiCondensed"/>
                        <Label Name="lblEndLiveps4N4" HorizontalAlignment="Right" Width="auto" Foreground="Linen"   Background ="Black" FontSize="15" FontWeight="Bold" FontStretch="SemiCondensed"/>
                        <Label Visibility="Collapsed" Name="lblEndps4N4" HorizontalAlignment="Right" Width="auto"  Foreground="Linen"   Background ="Black" FontSize="15" FontWeight="Bold" FontStretch="SemiCondensed"/>
                    </StackPanel>
                   
                   

                    <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center" Orientation="Horizontal" FlowDirection="RightToLeft">
                        <TextBlock FontSize="13" FontFamily="B Nazanin" FontWeight="Heavy" Foreground="Linen" Text="تعداد دسته" />
                        <CheckBox Margin="5"  Checked="Controller3Ps4N4_Checked" Name="Controller3Ps4N4" Content="3" Background="Linen" Foreground="Linen"/>
                        <CheckBox Margin="5"  Checked="Controller4Ps4N4_Checked" Name="Controller4Ps4N4" Content="4" Background="Linen" Foreground="Linen"/>

                    </StackPanel>
                    <Button VerticalAlignment="Stretch" Height="auto" Foreground="Linen" Name="btnps4N4" Content="Ps4N4" Background="Black" FontSize="20" FontFamily="Cooper Black" FontWeight="Heavy"    Click = "btnps4N4_Click"/>
                </DockPanel>
                    
                </Border>

        
            </Grid>
            <Grid Grid.Row="0" Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" BorderBrush="{StaticResource BackgroundColorPrimary}" BorderThickness="8" CornerRadius="15" Margin="2 0">
                    
                <DockPanel >
                    <TextBox Text="سیستم5" Name="txtps5" FlowDirection="RightToLeft" DockPanel.Dock="Top" Foreground="Linen" Background="Black" FontSize="13" FontFamily="B Nazanin" FontWeight="Heavy"/>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                        <Label Name="lblStartps5" HorizontalAlignment="Left" Width="auto" Foreground="Linen"   Background ="Black"    FontSize="15" FontWeight="Bold" FontStretch="SemiCondensed"/>
                        <Label Name="lblEndLiveps5" HorizontalAlignment="Right" Width="auto" Foreground="Linen"   Background ="Black" FontSize="15" FontWeight="Bold" FontStretch="SemiCondensed"/>
                        <Label Visibility="Collapsed" Name="lblEndps5" HorizontalAlignment="Right" Width="auto"  Foreground="Linen"   Background ="Black" FontSize="15" FontWeight="Bold" FontStretch="SemiCondensed"/>
                    </StackPanel>
                   

                    <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center" Orientation="Horizontal" FlowDirection="RightToLeft">
                        <TextBlock FontSize="17" FontFamily="B Nazanin" FontWeight="Heavy" Foreground="Linen" Text="تعداد دسته:" />
                        <CheckBox Margin="5"  Checked="Controller3Ps5_Checked" Name="Controller3Ps5" Content="3" Background="Linen" Foreground="Linen"/>
                        <CheckBox Margin="5"  Checked="Controller4Ps5_Checked" Name="Controller4Ps5" Content="4" Background="Linen" Foreground="Linen"/>

                    </StackPanel>
                    <Button VerticalAlignment="Stretch" Height="auto" Foreground="Linen" Name="btnps5" Content="Ps5" Background="Black" FontSize="20" FontFamily="Cooper Black" FontWeight="Heavy"    Click = "btnps5_Click"/>
                </DockPanel>
                </Border>
                <Border Grid.Row="1" Grid.Column="4" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" BorderBrush="{StaticResource BackgroundColorPrimary}" BorderThickness="8" CornerRadius="15" Margin="2 0">
                <DockPanel >
                    <TextBox Text="سیستم وی آی پی4" Name="txtVIP4" FlowDirection="RightToLeft" DockPanel.Dock="Top" Foreground="Linen" Background="Black" FontSize="13" FontFamily="B Nazanin" FontWeight="Heavy"/>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                        <Label Name="lblStartVIP4" HorizontalAlignment="Left" Width="auto" Foreground="Linen"   Background ="Black"    FontSize="15" FontWeight="Bold" FontStretch="SemiCondensed"/>
                        <Label Name="lblEndLiveVIP4" HorizontalAlignment="Right" Width="auto" Foreground="Linen"   Background ="Black" FontSize="15" FontWeight="Bold" FontStretch="SemiCondensed"/>
                        <Label Visibility="Collapsed" Name="lblEndVIP4" HorizontalAlignment="Right" Width="auto"  Foreground="Linen"   Background ="Black" FontSize="15" FontWeight="Bold" FontStretch="SemiCondensed"/>
                    </StackPanel>
                  

                    <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center" Orientation="Horizontal" FlowDirection="RightToLeft">
                        <TextBlock FontSize="17" FontFamily="B Nazanin" FontWeight="Heavy" Foreground="Linen" Text="تعداد دسته:" />
                        <CheckBox Margin="5"  Checked="Controller3VIP4_Checked" Name="Controller3VIP4" Content="3" Background="Linen" Foreground="Linen"/>
